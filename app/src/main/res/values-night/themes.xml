<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ImageEditor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/darker_grey</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darker_grey</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/darker_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_grey</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/light_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="myTextColor">@color/light_grey</item>
        <item name="colorContrast">@color/lighter_grey</item>
    </style>

    <style name="ThemePhotoDetail" parent="Theme.ImageEditor">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/light_grey</item>
        <item name="tabIndicatorHeight">@dimen/dp_24</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/light_grey</item>
        <item name="tabMode">scrollable</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:capitalize">words</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>
